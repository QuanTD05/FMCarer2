<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_card_rounded_blue"
    android:elevation="3dp"
    android:layout_margin="8dp">

    <!-- Ảnh đại diện trẻ -->
    <ImageView
        android:id="@+id/imageViewChild"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_grid"
        android:background="@drawable/bg_image_circle"
        android:contentDescription="Ảnh trẻ" />

    <!-- Thông tin trẻ -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên: Nguyễn Văn A"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0D47A1" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuổi: 5"
            android:textSize="14sp"
            android:textColor="#444" />

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính: Nam"
            android:textSize="14sp"
            android:textColor="#444" />

        <TextView
            android:id="@+id/textViewBirthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: 01/01/2020"
            android:textSize="14sp"
            android:textColor="#444" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Hà Nội"
            android:textSize="14sp"
            android:textColor="#444" />
    </LinearLayout>
</LinearLayout>
