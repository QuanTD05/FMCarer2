<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:layout_marginTop="20dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_card_blue"
        android:elevation="4dp"
        android:layout_margin="8dp"
        android:clipToPadding="false">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/detailImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_cam"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_image_circle" />

        <!-- Tên Trẻ -->
        <TextView
            android:id="@+id/detailNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Trẻ"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:padding="12dp"
            android:gravity="center"
            android:background="#BBDEFB"
            android:layout_marginBottom="12dp"
            android:backgroundTintMode="src_in" />

        <!-- Thông tin chi tiết -->
        <TextView
            android:id="@+id/detailAgeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuổi: "
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailGenderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính: "
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailBirthdateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: "
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:layout_marginBottom="12dp" />

        <!-- Khu vực các nút chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_card_rounded_blue"
            android:elevation="3dp">

            <!-- Mỗi mục sử dụng màu xanh nước biển và icon hiện đại -->

            <LinearLayout
                android:id="@+id/btnReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"

                    android:src="@drawable/ic_grid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch nhắc"
                    android:textColor="#0D47A1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_diary"

                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhật ký chăm sóc"
                    android:textSize="16sp"
                    android:textColor="#0D47A1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit1"

                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa thông tin"
                    android:textSize="16sp"
                    android:textColor="#0D47A1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
