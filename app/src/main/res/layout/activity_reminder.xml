<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E8F5E9"> <!-- Nền xanh lá rất nhạt -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_margin="8dp"
        android:clipToPadding="false"
        android:layout_gravity="center">

        <Spinner
            android:id="@+id/spinnerChildren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#A5D6A7"
            android:prompt="@string/select_child" />

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề nhắc nhở (ăn, ngủ...)"
            android:inputType="textCapSentences"
            android:layout_marginTop="8dp"
            android:backgroundTint="#A5D6A7" />

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:backgroundTint="#A5D6A7" />

        <EditText
            android:id="@+id/edtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thời gian (ví dụ: 08:00)"
            android:inputType="time"
            android:layout_marginTop="12dp"
            android:backgroundTint="#A5D6A7" />

        <CheckBox
            android:id="@+id/chkRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lặp lại"
            android:layout_marginTop="16dp"
            android:buttonTint="#66BB6A" /> <!-- Xanh lá trung bình -->

        <EditText
            android:id="@+id/edtRepeatType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kiểu lặp lại (ví dụ: Hàng ngày)"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:backgroundTint="#A5D6A7" />

        <Button
            android:id="@+id/btnSaveReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu nhắc lịch"
            android:layout_marginTop="20dp"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
