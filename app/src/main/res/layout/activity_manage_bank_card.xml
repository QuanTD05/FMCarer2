<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E3F2FD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:text="Quản lý thẻ ngân hàng"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Số thẻ -->
        <EditText
            android:id="@+id/edtCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số thẻ ngân hàng"
            android:inputType="number"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp" />

        <!-- Tên ngân hàng -->
        <EditText
            android:id="@+id/edtBankName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên ngân hàng"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="24dp" />

        <!-- Nút Lưu thẻ -->
        <Button
            android:id="@+id/btnSaveCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu thẻ"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="@drawable/button_save_background"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Nút Xóa thẻ -->
        <Button
            android:id="@+id/btnDeleteCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa thẻ"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="@drawable/button_save_background"
            android:padding="14dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
